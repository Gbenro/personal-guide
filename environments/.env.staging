# =============================================================================
# Personal Guide - Staging Environment Configuration
# =============================================================================

# Environment
NODE_ENV=production
NEXT_PUBLIC_APP_ENV=staging

# Application Settings
NEXT_PUBLIC_APP_NAME="Personal Guide (Staging)"
NEXT_PUBLIC_APP_URL=https://staging.personalguide.app
NEXT_PUBLIC_API_URL=https://staging.personalguide.app/api

# Database Configuration (Supabase - Staging)
NEXT_PUBLIC_SUPABASE_URL=<STAGING_SUPABASE_URL>
NEXT_PUBLIC_SUPABASE_ANON_KEY=<STAGING_SUPABASE_ANON_KEY>
SUPABASE_SERVICE_KEY=<STAGING_SERVICE_KEY>

# AI Configuration
OPENAI_API_KEY=<STAGING_OPENAI_KEY>
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Authentication
NEXTAUTH_SECRET=<STAGING_NEXTAUTH_SECRET>
NEXTAUTH_URL=https://staging.personalguide.app

# Monitoring & Analytics
NEXT_PUBLIC_ANALYTICS_ENABLED=true
SENTRY_DSN=<STAGING_SENTRY_DSN>
SENTRY_ENVIRONMENT=staging

# Feature Flags
NEXT_PUBLIC_FEATURE_ANALYTICS=true
NEXT_PUBLIC_FEATURE_AI_CHAT=true
NEXT_PUBLIC_FEATURE_MOOD_TRACKING=true
NEXT_PUBLIC_FEATURE_HABIT_TRACKING=true
NEXT_PUBLIC_FEATURE_JOURNALING=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=500
RATE_LIMIT_WINDOW_MS=900000

# CORS Settings
CORS_ORIGINS=https://staging.personalguide.app

# Development Tools
NEXT_PUBLIC_DEV_TOOLS=false
HOT_RELOAD=false

# Performance
NEXT_PUBLIC_CACHE_TTL=300
NEXT_PUBLIC_CDN_URL=<STAGING_CDN_URL>

# Security
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true