# =============================================================================
# Personal Guide - Production Environment Configuration
# =============================================================================

# Environment
NODE_ENV=production
NEXT_PUBLIC_APP_ENV=production

# Application Settings
NEXT_PUBLIC_APP_NAME="Personal Guide"
NEXT_PUBLIC_APP_URL=https://personalguide.app
NEXT_PUBLIC_API_URL=https://personalguide.app/api

# Database Configuration (Supabase - Production)
NEXT_PUBLIC_SUPABASE_URL=<PRODUCTION_SUPABASE_URL>
NEXT_PUBLIC_SUPABASE_ANON_KEY=<PRODUCTION_SUPABASE_ANON_KEY>
SUPABASE_SERVICE_KEY=<PRODUCTION_SERVICE_KEY>

# AI Configuration
OPENAI_API_KEY=<PRODUCTION_OPENAI_KEY>
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000

# Authentication
NEXTAUTH_SECRET=<PRODUCTION_NEXTAUTH_SECRET>
NEXTAUTH_URL=https://personalguide.app

# Monitoring & Analytics
NEXT_PUBLIC_ANALYTICS_ENABLED=true
SENTRY_DSN=<PRODUCTION_SENTRY_DSN>
SENTRY_ENVIRONMENT=production

# Feature Flags
NEXT_PUBLIC_FEATURE_ANALYTICS=true
NEXT_PUBLIC_FEATURE_AI_CHAT=true
NEXT_PUBLIC_FEATURE_MOOD_TRACKING=true
NEXT_PUBLIC_FEATURE_HABIT_TRACKING=true
NEXT_PUBLIC_FEATURE_JOURNALING=true

# Logging
LOG_LEVEL=warn
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=300
RATE_LIMIT_WINDOW_MS=900000

# CORS Settings
CORS_ORIGINS=https://personalguide.app

# Development Tools
NEXT_PUBLIC_DEV_TOOLS=false
HOT_RELOAD=false

# Performance
NEXT_PUBLIC_CACHE_TTL=3600
NEXT_PUBLIC_CDN_URL=<PRODUCTION_CDN_URL>

# Security
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true
XSS_PROTECTION=true

# Backup & Recovery
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Scaling
AUTO_SCALING_ENABLED=true
MIN_INSTANCES=2
MAX_INSTANCES=10