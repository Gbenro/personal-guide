{
  "name": "personal-guide",
  "version": "0.1.0",
  "description": "AI-powered personal assistance application",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --parallel dev",
    "dev:web": "pnpm --filter web dev",
    "dev:ai": "pnpm --filter ai-service dev",
    "build": "pnpm --recursive build",
    "test": "pnpm --recursive test",
    "lint": "pnpm --recursive lint",
    "type-check": "pnpm --recursive type-check"
  },
  "keywords": [
    "ai",
    "personal-assistant",
    "productivity",
    "journaling",
    "habits"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.62.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/pg": "^8.15.5",
    "bcryptjs": "^3.0.2",
    "next-auth": "^4.24.11",
    "pg": "^8.16.3"
  }
}
